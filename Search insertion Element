class Solution(object):
    def searchInsert(self, nums, target):
        left, right = 0, len(nums) - 1
        while left <= right:
            mid = (left + right) // 2
            if nums[mid] == target:
                return mid
            elif target < nums[mid]:  # move to left half
                right = mid - 1
            else:  # move to right half
                left = mid + 1
        return left  # insertion position if not found
